@model Application.DTOs.ArticleDTOs.ArticleDto

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">@Model.Title</h2>
            <p class="card-text"><strong>Author:</strong> @Model.AuthorName</p>
            <p class="card-text"><strong>Created At:</strong> @Model.CreatedAt.ToShortDateString()</p>

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Article Image" class="img-fluid mt-3 mb-3" />
            }

            <div class="card-text">
                @Html.Raw(Model.Content)
            </div>

            <p class="mt-4">
                <strong>Topics:</strong>
                @foreach (var topic in Model.Topics)
                {
                    <span class="badge bg-secondary">@topic</span>
                }
            </p>

            <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Back to Articles</a>
        </div>
    </div>
</div>
